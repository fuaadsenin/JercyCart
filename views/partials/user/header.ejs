.button-add-to-cart {
    background-color: #007bff;
    color: white;
    padding: 12px 25px;
    border-radius: 5px;
    font-size: 18px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.button-add-to-cart:hover {
    background-color: #0056b3;
}

