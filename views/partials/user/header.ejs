        /* Styling for the Jercy Cart Logo */
        .logo-text {
            font-family: 'Nunito Sans', sans-serif;
            font-size: 24px;
            font-weight: 800;
            display: inline-block;
        }

        .logo-text .jercy {
            color: red;
