.title-detail {
    font-size: 32px;
    font-weight: 600;
    color: #333;
    margin-bottom: 20px;
}

/* Product Price Section */
.product-price {
    font-size: 20px;
    font-weight: bold;
    color: #007bff;
}

.old-price {
    text-decoration: line-through;
    color: #999;
    margin-left: 15px;
}

.save-price {
    color: #f57224;
    font-size: 16px;
    margin-left: 10px;
}

/* Product Description */
.short-desc {
    font-size: 16px;
    line-height: 1.5;
    color: #555;
}

